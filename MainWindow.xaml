<Window
    x:Class="烟尘记.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:烟尘记"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="960"
    Height="540"
    MinWidth="350"
    MinHeight="350"
    AllowsTransparency="False"
    KeyDown="Window_KeyDown"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <!--  WindowStyle="None"  -->

    <Grid>

        <!--  页面框架层  -->
        <!--  这里的属性NavigationUIVisibility是用于设置是否隐藏上面的导航栏，如果没有这个，用导航方法跳转到另一个界面之后上面会出现导航条，类似于IE浏览器的前进和后退样式  -->
        <Frame x:Name="page_frame" NavigationUIVisibility="Hidden" />


        <!--  全局音乐播放器  -->
        <MediaElement x:Name="global_media_element" LoadedBehavior="Manual" />

        <!--  蒙版层  -->
        <Rectangle
            x:Name="black_mask"
            Panel.ZIndex="999"
            Fill="Black"
            IsHitTestVisible="True"
            Opacity="0"
            Visibility="Collapsed" />
    </Grid>

</Window>