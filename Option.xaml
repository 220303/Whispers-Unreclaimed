<Page
    x:Class="烟尘记.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:烟尘记"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Option"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Focusable="True"
    KeyDown="Page_KeyDown"
    Tag="all"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            Name="Plot_font_size_Textbox"
            Width="242"
            Height="24"
            Margin="0,88,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            Name="Plot_print_speed_Textbox"
            Width="242"
            Height="24"
            Margin="0,169,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            Name="Music_volume_Textbox"
            Width="242"
            Height="24"
            Margin="0,250,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Button
            Name="Save_options"
            Width="120"
            Height="24"
            Margin="0,346,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="Save_options_Click"
            Content="保存设置" />


        <Label
            Width="103"
            Height="24"
            Margin="162,88,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="字体大小" />
        <Label
            Width="103"
            Height="24"
            Margin="162,169,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="文字输出速度" />
        <Label
            Width="103"
            Height="24"
            Margin="162,250,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="音乐声音" />

    </Grid>
</Page>
