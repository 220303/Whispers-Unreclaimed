<Page
    x:Class="烟尘记.Failure"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:烟尘记"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Failure"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Black"
    mc:Ignorable="d" KeyDown="Page_KeyDown" MouseDown="Page_MouseDown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Viewbox
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Stretch="Uniform">
            <TextBlock
                x:Name="Failure_text"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="/Filesystem/Resource/Font/你失败了.ttf#SJxingkai-C"
                FontWeight="Bold"
                Foreground="Red"
                Text="你失败了!" />
        </Viewbox>
        <Viewbox
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Stretch="Uniform">
            <TextBlock
                x:Name="Restart_text"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="/Filesystem/Resource/Font/再接再厉.ttf#ChisugaShotai"  
                FontWeight="Bold"
                Foreground="White"
                Text="请再接再厉，寻找梦的渊源"
                />
        </Viewbox>

    </Grid>
</Page>
