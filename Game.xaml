<Page
    x:Class="烟尘记.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:烟尘记"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Game"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Focusable="True"
    KeyDown="Page_KeyDown"
    PreviewMouseLeftButtonDown="Page_PreviewMouseLeftButtonDown"
    mc:Ignorable="d">
    <Grid Focusable="True" KeyDown="Page_KeyDown">
        <ScrollViewer Name="Plot_scrollviewer" VerticalScrollBarVisibility="Hidden">
            <TextBlock
                x:Name="PlotText"
                Margin="100,80,100,100"
                FontSize="40"
                TextWrapping="Wrap" />
        </ScrollViewer>
        <DockPanel
            x:Name="ChoicesDock"
            Width="600"
            Height="50"
            Margin="0,0,0,40"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Visibility="Collapsed" />
    </Grid>
</Page>
