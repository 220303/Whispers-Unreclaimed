<UserControl x:Class="烟尘记.Page_concer_pattern"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:烟尘记"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 对称翻转 -->
        <TransformGroup x:Key="HorizontalFlip">
            <ScaleTransform ScaleX="-1" />
        </TransformGroup>
        <TransformGroup x:Key="VerticalFlip">
            <ScaleTransform ScaleY="-1" />
        </TransformGroup>
        <TransformGroup x:Key="FullFlip">
            <ScaleTransform ScaleX="-1" ScaleY="-1" />
        </TransformGroup>

        <!-- 魔法角落图案 PathGeometry -->
        <PathGeometry x:Key="MagicCornerGeometry">
            <PathFigure StartPoint="0,0">
                <LineSegment Point="30,0" />
                <LineSegment Point="30,10" />
                <LineSegment Point="10,10" />
                <LineSegment Point="10,30" />
                <LineSegment Point="0,30" />
                <LineSegment Point="0,0" />
            </PathFigure>
            <PathFigure StartPoint="40,0">
                <LineSegment Point="80,0" />
                <LineSegment Point="80,40" />
                <LineSegment Point="70,40" />
                <LineSegment Point="70,10" />
                <LineSegment Point="40,10" />
                <LineSegment Point="40,0" />
            </PathFigure>
            <PathFigure StartPoint="0,50">
                <LineSegment Point="10,50" />
                <LineSegment Point="10,70" />
                <LineSegment Point="30,70" />
                <LineSegment Point="30,80" />
                <LineSegment Point="0,80" />
                <LineSegment Point="0,50" />
            </PathFigure>
            <PathFigure StartPoint="50,70">
                <LineSegment Point="70,70" />
                <LineSegment Point="70,50" />
                <LineSegment Point="80,50" />
                <LineSegment Point="80,80" />
                <LineSegment Point="50,80" />
                <LineSegment Point="50,70" />
            </PathFigure>
        </PathGeometry>
    </UserControl.Resources>

    <Grid>
        <!-- Top Left -->
        <Path Data="{StaticResource MagicCornerGeometry}"
              Stroke="White"
              StrokeThickness="2"
              RenderTransformOrigin="0,0"
              Stretch="Uniform"
              Width="80" Height="80"
              HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <Path.RenderTransform>
                <ScaleTransform x:Name="TopLeftScale" />
            </Path.RenderTransform>
        </Path>

        <!-- Top Right -->
        <Path Data="{StaticResource MagicCornerGeometry}"
              Stroke="White"
              StrokeThickness="2"
              RenderTransformOrigin="1,0"
              Stretch="Uniform"
              Width="80" Height="80"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              LayoutTransform="{StaticResource HorizontalFlip}">
            <Path.RenderTransform>
                <ScaleTransform x:Name="TopRightScale" />
            </Path.RenderTransform>
        </Path>

        <!-- Bottom Left -->
        <Path Data="{StaticResource MagicCornerGeometry}"
              Stroke="White"
              StrokeThickness="2"
              RenderTransformOrigin="0,1"
              Stretch="Uniform"
              Width="80" Height="80"
              HorizontalAlignment="Left"
              VerticalAlignment="Bottom"
              LayoutTransform="{StaticResource VerticalFlip}">
            <Path.RenderTransform>
                <ScaleTransform x:Name="BottomLeftScale" />
            </Path.RenderTransform>
        </Path>

        <!-- Bottom Right -->
        <Path Data="{StaticResource MagicCornerGeometry}"
              Stroke="White"
              StrokeThickness="2"
              RenderTransformOrigin="1,1"
              Stretch="Uniform"
              Width="80" Height="80"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              LayoutTransform="{StaticResource FullFlip}">
            <Path.RenderTransform>
                <ScaleTransform x:Name="BottomRightScale" />
            </Path.RenderTransform>
        </Path>
    </Grid>
</UserControl>