<Page
    x:Class="烟尘记.Start"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:烟尘记"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Start"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FocusManager.IsFocusScope="True"
    Focusable="True"
    KeyDown="Page_KeyDown"
    MouseDown="Page_MouseDown"
    Tag="program"
    mc:Ignorable="d">

    <Grid>

        <!--  背景图片层  -->
        <Canvas x:Name="BackgroundCanvas" ClipToBounds="True">
            <Image
                x:Name="Image1"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="./Filesystem/Resource/Start/Start.png">
                <Image.RenderTransform>
                    <TranslateTransform x:Name="transform1" />
                </Image.RenderTransform>
                <Image.Effect>
                    <local:WaterRippleEffect
                        x:Name="RippleEffect_1"
                        Amplitude="0.4"
                        Center="0.5,0.5"
                        Frequency="80"
                        Speed="8"
                        Time="0" />
                </Image.Effect>
            </Image>
            <Image
                x:Name="Image2"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="./Filesystem/Resource/Start/Start.png">
                <Image.RenderTransform>
                    <TranslateTransform x:Name="transform2" />
                </Image.RenderTransform>
                <Image.Effect>
                    <local:WaterRippleEffect
                        x:Name="RippleEffect_2"
                        Amplitude="0.4"
                        Center="0.5,0.5"
                        Frequency="80"
                        Speed="8"
                        Time="0" />
                </Image.Effect>
            </Image>
        </Canvas>

        <Image
            x:Name="Logo"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="./Filesystem/Resource/Start/Logo.png" />

    </Grid>
</Page>
