<Page
    x:Class="烟尘记.Credit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:烟尘记"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Credit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Black"
    FocusManager.IsFocusScope="True"
    Focusable="True"
    KeyDown="Page_KeyDown"
    Loaded="Page_Loaded"
    MouseDown="Page_MouseDown"
    mc:Ignorable="d">


    <Grid x:Name="Total_grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  屏幕上端边框  -->
        <Rectangle
            x:Name="top_mask"
            Grid.Row="0"
            Grid.Column="1"
            Panel.ZIndex="999"
            Fill="Black"
            IsHitTestVisible="False"
            Opacity="1" />

        <!--  中间单元格内容  -->
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            ClipToBounds="True"
            HorizontalScrollBarVisibility="Disabled"
            IsHitTestVisible="False"
            VerticalScrollBarVisibility="Hidden">
            <!--  滚动容器  -->
            <StackPanel x:Name="scrolling_panel" Orientation="Vertical">

                <StackPanel.RenderTransform>
                    <TranslateTransform x:Name="scrolling_translate" />
                </StackPanel.RenderTransform>

                <!--  多结局提醒  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        x:Name="finish"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontFamily="/Filesystem/Resource/Font/剧情.ttf#QFKT"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text="这里是多结局提醒"
                        TextWrapping="Wrap" />
                </Grid>

                <!--  占位  -->
                <TextBlock
                    x:Name="blank_0"
                    Grid.Row="0"
                    Grid.Column="1"
                    FontSize="{x:Static local:Option.plot_font_size}"
                    Foreground="White"
                    Text="" />


                <!--  下一部剧情预告  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        x:Name="plot_trailer"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontFamily="/Filesystem/Resource/Font/预告.ttf#ShanHaiLiuYingKai 55W"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text="这里是预告"
                        TextWrapping="Wrap" />
                </Grid>

                <!--  占位  -->
                <TextBlock
                    x:Name="blank_1"
                    Grid.Row="0"
                    Grid.Column="1"
                    FontSize="{x:Static local:Option.plot_font_size}"
                    Foreground="White"
                    Text="" />

                <!--  合影  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Image
                        Grid.Row="0"
                        Grid.Column="1"
                        Source="/Filesystem/Credit/Picture.png"
                        Visibility="Visible" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="16"
                        Text="" />

                    <TextBlock
                        x:Name="picture_introduce"
                        Grid.Row="2"
                        Grid.Column="1"
                        FontFamily="/Filesystem/Resource/Font/AaShiYueHuaChaXingKaiTi-2.ttf#Aa诗月花茶行楷体"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text="图为两位制作者合影，左侧为220303，右侧为Rebillion"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Grid>


                <!--  占位  -->
                <TextBlock
                    x:Name="blank_2"
                    Grid.Row="2"
                    Grid.Column="1"
                    FontSize="{x:Static local:Option.plot_font_size}"
                    Foreground="White"
                    Text="" />

                <!--  制作人员名单  -->
                <Grid x:Name="Credit_grid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        x:Name="credit_text"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Grid>

                <!--  占位  -->
                <TextBlock
                    x:Name="blank_3"
                    Grid.Row="2"
                    Grid.Column="1"
                    FontSize="{x:Static local:Option.plot_font_size}"
                    Foreground="White"
                    Text="" />

                <!--  我和李任的话  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <!--  我的话  -->
                    <TextBlock
                        x:Name="me"
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        TextAlignment="Right" />
                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="20,0"
                        VerticalAlignment="Center"
                        BorderBrush="DarkOrange"
                        BorderThickness="0,0,0,3" />
                    <TextBlock
                        x:Name="my_word"
                        Grid.Row="2"
                        Grid.Column="1"
                        FontFamily="/Filesystem/Resource/Font/220303.ttf#Aa诗月花茶行楷体"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text=""
                        TextWrapping="Wrap" />


                    <!--  占位空行  -->
                    <TextBlock
                        x:Name="blank_word"
                        Grid.Row="3"
                        Grid.Column="1"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text="" />

                    
                    <!--  李任的话  -->
                    <TextBlock
                        x:Name="rebillion"
                        Grid.Row="4"
                        Grid.Column="2"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White" />
                    <Border
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="20,0"
                        VerticalAlignment="Center"
                        BorderBrush="ForestGreen"
                        BorderThickness="0,0,0,3" />
                    <TextBlock
                        x:Name="Rebillion_word"
                        Grid.Row="5"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        FontFamily="/Filesystem/Resource/Font/Rebillion.ttf#ANZHHRLSXT"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text=""
                        TextAlignment="Right"
                        TextWrapping="Wrap" />

                </Grid>

                <!--  占位空行  -->
                <TextBlock
                    x:Name="blank_4"
                    Grid.Row="2"
                    Grid.Column="1"
                    FontSize="{x:Static local:Option.plot_font_size}"
                    Foreground="White"
                    Text="" />

                <!--  Logo展示  -->
                <Image
                    x:Name="Logo"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="./Filesystem/Resource/Start/Logo.png" />

            </StackPanel>

        </ScrollViewer>


        <!--  屏幕下端边框  -->
        <Rectangle
            x:Name="bottom_mask"
            Grid.Row="2"
            Grid.Column="1"
            Panel.ZIndex="999"
            Fill="Black"
            IsHitTestVisible="False"
            Opacity="1" />

    </Grid>
</Page>
