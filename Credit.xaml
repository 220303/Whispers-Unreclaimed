<Page
    x:Class="烟尘记.Credit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:烟尘记"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Credit"
        FocusManager.IsFocusScope="True"
    Focusable="True"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Black"
    Loaded="Page_Loaded"
        KeyDown="Page_KeyDown"
    MouseDown="Page_MouseDown"
    mc:Ignorable="d">


    <Grid x:Name="Total_grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Rectangle
            x:Name="top_mask"
            Grid.Row="0"
            Grid.Column="1"
            Panel.ZIndex="999"
            Fill="Black"
            IsHitTestVisible="False"
            Opacity="1" />

        <!--  中间单元格内容  -->
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            ClipToBounds="True"
            HorizontalScrollBarVisibility="Disabled"
            IsHitTestVisible="False"
            VerticalScrollBarVisibility="Hidden">
            <!--  滚动容器  -->
            <StackPanel x:Name="scrolling_panel" Orientation="Vertical">

                <StackPanel.RenderTransform>
                    <TranslateTransform x:Name="scrolling_translate" />
                </StackPanel.RenderTransform>

                <!--  下一部剧情预告  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        x:Name="plot_trailer"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text="下一部的预告"
                        TextWrapping="Wrap" />
                </Grid>

                <!--  占位  -->
                <TextBlock
                    x:Name="blank_1"
                    Grid.Row="0"
                    Grid.Column="1"
                    FontSize="{x:Static local:Option.plot_font_size}"
                    Foreground="White"
                    Text="" />

                <!--  合影  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Image
                        Grid.Row="0"
                        Grid.Column="1"
                        Source="Filesystem\Credit\string_color_Bug.png"
                        Visibility="Visible" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="16"
                        Text="" />

                    <TextBlock
                        x:Name="picture_introduce"
                        Grid.Row="2"
                        Grid.Column="1"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text="图为两位制作者合影，左侧为220303，右侧为Rebillion"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Grid>


                <!--  占位  -->
                <TextBlock
                    x:Name="blank_2"
                    Grid.Row="2"
                    Grid.Column="1"
                    FontSize="{x:Static local:Option.plot_font_size}"
                    Foreground="White"
                    Text="" />

                <!--  制作人员名单  -->
                <Grid x:Name="Credit_grid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        x:Name="credit_text"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Grid>

                <!--  占位  -->
                <TextBlock
                    x:Name="blank_3"
                    Grid.Row="2"
                    Grid.Column="1"
                    FontSize="{x:Static local:Option.plot_font_size}"
                    Foreground="White"
                    Text="" />

                <!--  我和李任的话  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="23*" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <!--  我的话  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text="220303 &gt;&gt; "
                        TextAlignment="Right" />

                    <TextBlock
                        x:Name="my_word"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text=""
                        TextWrapping="Wrap" />


                    <!--  占位空行  -->
                    <TextBlock
                        x:Name="blank"
                        Grid.Row="2"
                        Grid.Column="1"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text="" />

                    <!--  李任的话  -->
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="2"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text=" &lt;&lt; Rebillion" />
                    <TextBlock
                        x:Name="Rebillion_word"
                        Grid.Row="3"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        FontSize="{x:Static local:Option.plot_font_size}"
                        Foreground="White"
                        Text=""
                        TextAlignment="Right"
                        TextWrapping="Wrap" />

                </Grid>

            </StackPanel>

        </ScrollViewer>



        <Rectangle
            x:Name="bottom_mask"
            Grid.Row="2"
            Grid.Column="1"
            Panel.ZIndex="999"
            Fill="Black"
            IsHitTestVisible="False"
            Opacity="1" />

    </Grid>
</Page>
