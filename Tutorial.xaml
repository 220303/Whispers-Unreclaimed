<Page
    x:Class="烟尘记.Tutorial"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:烟尘记"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tutorial"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Black"
    FocusManager.IsFocusScope="True"
    Focusable="True"
    KeyDown="Page_KeyDown"
    PreviewMouseLeftButtonDown="Page_PreviewMouseLeftButtonDown"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Name="Tutorial_scrollviewer"
            Grid.Row="1"
            Grid.Column="1"
            VerticalScrollBarVisibility="Hidden">
            <TextBlock
                x:Name="Tutorial_text"
                FontFamily="/Filesystem/Resource/Font/再接再厉.ttf#ChisugaShotai"
                FontSize="{x:Static local:Option.plot_font_size}"
                Foreground="White"
                TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Page>
